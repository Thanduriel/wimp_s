#version 330

in vec2 vs_out_TexCoord;

uniform sampler2D screenTex;

out vec3 fragColor;

void main()
{
	vec2 coord = vs_out_TexCoord;//-1 * vec2(cos(((vs_out_TexCoord.x+1)*0.5f) * 3.1415f), cos(((vs_out_TexCoord.y+1)*0.5f) * 3.1415f));
	vec3 screenColor = texture(screenTex, coord).rgb;
	
	fragColor = screenColor;
}
